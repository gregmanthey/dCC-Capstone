@model List<Capstone.Models.Artist>

@{
    ViewBag.Title = "PickArtists";
}

<h2>PickArtists</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @*<table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].ArtistName)
            </th>
            <th></th>
        </tr>*@
    <div class="row">
        @for (int i = 0; i < Model.Count(); i++)
        {
            @*<tr>
                <td>*@

            <div class="card text-center mx-auto my-1">
                @*<img class="card-img-top" src="..." alt="Card image cap">*@
                <div class="card-body">
                    @Html.CheckBoxFor(m => Model[i].Liked)
                    <h5 class="card-title">@Model[i].ArtistName</h5>
                    <p class="card-text">
                        <b>Popularity:</b> @Model[i].Popularity/100<br />
                        <b>Genres:</b><br />
                        @for (int j = 0; j < Model[i].ArtistGenres.Count(); j++)
                        {
                            @Html.DisplayFor(modelItem => Model[i].ArtistGenres[j].GenreSpotifyName)
                            <br />
                        }
                    </p>

                    @*<a href="#" class="btn btn-primary">Go somewhere</a>*@
                </div>
            </div>
            @Html.HiddenFor(modelItem => Model[i].ArtistGenres)
            @*@Html.DisplayFor(modelItem => Model[i].ArtistName)*@
            @Html.HiddenFor(modelItem => Model[i].ArtistName)
            @Html.HiddenFor(modelItem => Model[i].ArtistId)
            @Html.HiddenFor(modelItem => Model[i].ArtistSpotifyId)
            <br />
            @*if ((i + 1) % 4 == 0)
            {
            @:</div>
            @:<div class="row">
            }*@
            @*</td>
                </tr>*@
        }
    </div>
    @*</table>*@
    <div class="row">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit liked artists" class="btn btn-default" />
            </div>
        </div>
    </div>
}

