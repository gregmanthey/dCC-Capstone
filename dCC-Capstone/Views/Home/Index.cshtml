@model List<Capstone.Models.Playlist>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Welcome to Random Playlist Generator</h1>
    <h2>Powered by Spotify</h2>
    <p class="lead">Create playlists based on artists you like.</p>
    
</div>


<div class="row">
    @for (int i = 0; i < Model.Count; i++)
        {
            var playlist = Model[i];
        <div class="col-md-4">
            <h3>@playlist.PlaylistName</h3>
            <p>
                @if (playlist.PlaylistMood != null)
                {
                    Html.DisplayFor(p => playlist.PlaylistMood);
                }
            </p>
            <h5>Created by: @Html.DisplayFor(p=>playlist.Listener.ScreenName)</h5>
            <p><a class="btn btn-default" href="@Url.Action("Details", "Playlists", new { id = playlist.PlaylistId})">Check it out! &raquo;</a></p>
        </div>
    }
</div>
